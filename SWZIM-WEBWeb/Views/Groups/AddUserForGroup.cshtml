@model SWZIM_WEBWeb.Models.HelperViewModels.UserForGroupViewModel
@{
    ViewBag.Title = "Dodaj użytkownika do grupy " + ViewBag.GrpName;
}


<section id="main-content">
    <section class="wrapper">

        <div class="row">
            <div class="col-lg-12">
                <!--breadcrumbs start -->
                <ul class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Home")"><i class="icon_house_alt"></i> Home</a></li>
                    <li class="active"> @ViewBag.Title</li>
                </ul>
                <!--breadcrumbs end -->
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        @ViewBag.Title
                    </header>
                    <div class="panel-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(x => x.UserId, (IEnumerable<SelectListItem>)ViewBag.NotInGrpUsers, new { @class = "form-control text-box single-line" })
                                    </div>
                                </div>
                                @Html.HiddenFor(model => model.GroupId, new { Value = ViewBag.GrpId })


                                <p style="clear:both; padding-top: 15px">
                                    <input type="submit" value="Dodaj" class="btn btn-info  btn-sm" />
                                    @Html.ActionLink("Przejdź do listy grup", "Index", "Groups", null, new { Class = "btn btn-info  btn-sm" })
                                </p>
                            </div>
                        }

                    </div>
                </section>

            </div>
        </div>
    </section>
</section>