@model IEnumerable<SWZIM_WEBWeb.Users>

@{
    ViewBag.Title = "Lista użytkowników przypisanych do grupy: " + ViewBag.GrpName;
}


<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <!--breadcrumbs start -->
                <ul class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Home")"><i class="icon_house_alt"></i> Home</a></li>
                    <li class="active"> @ViewBag.Title</li>
                </ul>
                <!--breadcrumbs end -->
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        @ViewBag.Title
                    </header>
                    <div class="panel-body">
                        <p>
                            @Html.ActionLink("Przypisz użytkownika", "AddUserForGroup", new { id = ViewBag.GrpId }, new { Class = "btn btn-info  btn-sm" })
                        </p>
                        <table class="table">
                            <tr>
                                <th>
                                    Użytkownik
                                </th>
                                <th></th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Usuń", "DeleteUserFromGroup", new { id = item.ID }, new { @class = "btn btn-danger  btn-sm" })
                                        
                                    </td>
                                </tr>
                            }
                        </table>
                        <p style="clear:both; padding-top: 15px">
                            <input type="submit" value="Dodaj" class="btn btn-info  btn-sm" />
                            @Html.ActionLink("Przejdź do listy grup", "Index", "Groups", null, new { Class = "btn btn-info  btn-sm" })
                        </p>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>
