@model SWZIM_WEBWeb.Models.HelperViewModels.SearchViewModel
@{
    ViewBag.Title = "Wyszukiwanie";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <!--breadcrumbs start -->
                <ul class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Home")"><i class="icon_house_alt"></i> Home</a></li>
                    <li class="active"> Wyniki wyszukiwania dla : <strong>@ViewBag.TextToFind</strong></li>
                </ul>
                <!--breadcrumbs end -->
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Zdarzenia
                    </header>
                    <div class="panel-body">

                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Event.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Event.Latitude)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Event.Longitude)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Event.CreatedAt)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Event.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Event.Status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Event.EventTypes.Name)
                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.Users.Email)
                                </th>*@
                                <th></th>
                            </tr>
                            @foreach (Events item in ViewData["events"] as List<Events>)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Latitude)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Longitude)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedAt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EventTypes.Name)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Szczegóły", "Details", "Events", new { id = item.Id }, new { id = item.Id, Class = "btn btn-warning btn-sm" })
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </section>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Elementy warstwy
                    </header>
                    <div class="panel-body">

                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.LayoutElement.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LayoutElement.Latitude)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LayoutElement.Longitude)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LayoutElement.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LayoutElement.Layers.Name)
                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.Users.Email)
                                </th>*@
                                <th></th>
                            </tr>
                            @foreach (LayoutElements item in ViewData["layoutElements"] as List<LayoutElements>)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Latitude)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Longitude)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Layers.Name)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Szczegóły", "Details", "LayoutElements", new { id = item.Id }, new { id = item.Id, Class = "btn btn-warning btn-sm" })
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </section>
            </div>
        </div>

        
    </section>
</section>

