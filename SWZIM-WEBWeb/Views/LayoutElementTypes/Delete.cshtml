@model SWZIM_WEBWeb.LayoutElementTypes

@{
    ViewBag.Title = "Usuwanie typu elementu warstwy";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <!--breadcrumbs start -->
                <ul class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Home")"><i class="icon_house_alt"></i> Home</a></li>
                    <li class="active"> @ViewBag.Title</li>
                </ul>
                <!--breadcrumbs end -->
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        @ViewBag.Title
                    </header>
                    <div class="panel-body">
                        <h3>Czy napewno chcesz usunąć ten typ elementu warstwy?</h3>
                        <div>
                            <h4>Typ elementu warstwy</h4>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Name)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.MarkerIcons.Name)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.MarkerIcons.Name)
                                </dd>
                            </dl>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Usuń" class="btn btn-default" /> |
                                    @Html.ActionLink("Przejdź do listy typów elementu warstwy", "Index", null, new { Class = "btn btn-info  btn-sm" })
                                </div>
                            }
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>
