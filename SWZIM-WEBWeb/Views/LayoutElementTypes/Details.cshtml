@model SWZIM_WEBWeb.LayoutElementTypes

@{
    ViewBag.Title = "Szczegóły typu elementu warstwy";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <!--breadcrumbs start -->
                <ul class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Home")"><i class="icon_house_alt"></i> Home</a></li>
                    <li class="active"> @ViewBag.Title</li>
                </ul>
                <!--breadcrumbs end -->
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        @ViewBag.Title
                    </header>
                    <div class="panel-body">
                        <div>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Name)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.MarkerIcons.Name)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.MarkerIcons.Name)
                                </dd>
                            </dl>
                        </div>
                        <p>
                            @Html.ActionLink("Edytuj", "Edit", null, new { id = Model.Id, Class = "btn btn-info  btn-sm" })
                            @Html.ActionLink("Przejdź do listy typów elementu warstwy", "Index", null, new { Class = "btn btn-info  btn-sm" })
                        </p>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>