@model IEnumerable<SWZIM_WEBWeb.LayoutElementTypes>

@{
    ViewBag.Title = "Typy elementów warstw modelu";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <!--breadcrumbs start -->
                <ul class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Home")"><i class="icon_house_alt"></i> Home</a></li>
                    <li class="active"> Typy elementów warstw modelu</li>
                </ul>
                <!--breadcrumbs end -->
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Lista typów wydarzeń
                    </header>
                    <div class="panel-body">
                        <p>
                            @Html.ActionLink("Utwórz nowy typ", "Create", null, new { Class = "btn btn-info  btn-sm" })
                        </p>
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MarkerIcons.Name)
                                </th>
                                <th></th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MarkerIcons.Name)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edycja", "Edit", null, new { id = item.Id, Class = "btn btn-info  btn-sm" })
                                        @Html.ActionLink("Szczegóły", "Details", null, new { id = item.Id, Class = "btn btn-warning  btn-sm" })
                                        @Html.ActionLink("Usuń", "Delete", null, new { id = item.Id, Class = "btn btn-danger  btn-sm" })
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>
