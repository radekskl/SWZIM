@model SWZIM_WEBWeb.LayoutElements

@{
    ViewBag.Title = "Usuń element warstwy";
}

<section id="main-content">
    <section class="wrapper">

        <div class="row">
            <div class="col-lg-12">
                <!--breadcrumbs start -->
                <ul class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Home")"><i class="icon_house_alt"></i> Home</a></li>
                    <li class="active"> @ViewBag.Title</li>
                </ul>
                <!--breadcrumbs end -->
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        @ViewBag.Title
                    </header>
                    <div class="panel-body">
                        <h3 style="text-align: center;">Czy napewno chcesz usunąć tą warstwę?</h3>
                        <div>
                            <h4>Warstwa</h4>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Name)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Name)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Description)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Description)
                                </dd>


                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <p style="padding-top: 15px;">
                                    <input type="submit" value="Usuń" class="btn btn-info  btn-sm" />
                                    @Html.ActionLink("Przejdź do listy elementów warstw", "Index", null, new { Class = "btn btn-info  btn-sm" })
                                </p>
                            }
                        </div>
                    </div>
                </section>

            </div>
        </div>
    </section>
</section>