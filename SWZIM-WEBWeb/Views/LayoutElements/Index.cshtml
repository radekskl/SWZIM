@model IEnumerable<SWZIM_WEBWeb.LayoutElements>

@{
    ViewBag.Title = "Elementy warstw";
}


<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <!--breadcrumbs start -->
                <ul class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Home")"><i class="icon_house_alt"></i> Home</a></li>
                    <li class="active"> @ViewBag.Title</li>
                </ul>
                <!--breadcrumbs end -->
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        @ViewBag.Title
                    </header>
                    <div class="panel-body">
                        <p>
                            @Html.ActionLink("Utwórz nowy element warstwy", "Create", null, new { Class = "btn btn-info  btn-sm" })
                        </p>
                        <h3>Elementy warstwy zgrupowane</h3>
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Layers.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LayoutElements1.Count)
                                </th>
                                <th></th>
                            </tr>
                            @foreach (var item in ViewData["pLE"] as List<LayoutElements>)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Layers.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LayoutElements1.Count)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edycja", "Edit", new { id = item.Id }, new { @class = "btn btn-info  btn-sm" })
                                        @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }, new { @class = "btn btn-warning  btn-sm" })
                                        @Html.ActionLink("Usuń", "Delete", new { id = item.Id }, new { @class = "btn btn-danger  btn-sm" })
                                        @Html.ActionLink("Cześci elementu warstwy", "Users", new { id = item.Id }, new { @class = "btn btn-info  btn-sm" })
                                    </td>
                                </tr>
                            }
                        </table>
                        <h3>Elementy warstwy pojedyncze</h3>
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Layers.Name)
                                </th>
                                <th>
                                    Należy do
                                </th>
                                <th></th>
                            </tr>
                            @foreach (var item in ViewData["sLE"] as List<LayoutElements>)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Layers.Name)
                                    </td>
                                    <td>
                                        @{
                                            var result = "";
                                        }
                                        @foreach (var itn in item.LayoutElements2)
                                        {
                                            result += itn.Name + " ";
                                        }
                                        @result
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edycja", "Edit", new { id = item.Id }, new { @class = "btn btn-info  btn-sm" })
                                        @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }, new { @class = "btn btn-warning  btn-sm" })
                                        @Html.ActionLink("Usuń", "Delete", new { id = item.Id }, new { @class = "btn btn-danger  btn-sm" })
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>
