@model SWZIM_WEBWeb.Models.ProfileDataModel
@{
    ViewBag.Title = "Index";
}


<section id="main-content">
    <section class="wrapper">

        <div class="row">
            <div class="col-lg-12">
                <!--breadcrumbs start -->
                <ul class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Home")"><i class="icon_house_alt"></i> Home</a></li>
                    <li class="active"> Profil użytkownika</li>
                </ul>
                <!--breadcrumbs end -->
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Profil użytkownika
                    </header>
                    @*<div class="panel panel-primary">
                        <div class="panel-heading">Panel heading</div>
                        <div class="panel-content">Panel content</div>
                    </div>*@
                    <div class="panel-body">
                        <section class="panel">
                            <header class="panel-heading tab-bg-primary ">
                                <ul class="nav nav-tabs">
                                    <li class="">
                                        <a data-toggle="tab" href="#basic">Informacje podstawowe</a>
                                    </li>
                                    <li class="">
                                        <a data-toggle="tab" href="#manage">Zarządzanie</a>
                                    </li>
                                    <li class="">
                                        <a data-toggle="tab" href="#events">Dodane zdarzenia</a>
                                    </li>
                                    <li class="">
                                        <a data-toggle="tab" href="#elems">Dodane elementy warstwy</a>
                                    </li>
                                </ul>
                            </header>
                            <div class="panel-body">
                                <div class="tab-content">
                                    <div id="basic" class="tab-pane active" style="min-height: 300px;">
                                        <div style="width: 40%;float:left; padding-right:15px;"><img src="@Model.PictureUrl" /></div>
                                        <div style="float: left;  width: 60%;">
                                            <div class="form-horizontal">
                                                <div class="form-group">
                                                    <label class="control-label col-md-2" for="">Nazwa wyświetlana</label>
                                                    <div class="col-md-10">
                                                        <input class="form-control text-box single-line" type="text" value="@Model.PreferredName" disabled>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-md-2" for="">Imie</label>
                                                    <div class="col-md-10">
                                                        <input class="form-control text-box single-line" type="text" value="@Model.FirstName" disabled>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-md-2" for="">Nazwisko</label>
                                                    <div class="col-md-10">
                                                        <input class="form-control text-box single-line" type="text" value="@Model.LastName" disabled>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-md-2" for="">E-mail</label>
                                                    <div class="col-md-10">
                                                        <input class="form-control text-box single-line" type="text" value="@Model.UserName" disabled>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-md-2" for="">Grupa</label>
                                                    <div class="col-md-10">
                                                        @{
                                                            string grps = "";
                                                            foreach (var item in Model.UserGroup)
                                                            {
                                                                grps += item.Name + " ";
                                                            }
                                                        }
                                                        <input class="form-control text-box single-line" type="text" value="@grps" disabled>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="manage" class="tab-pane" style="min-height: 300px;">
                                        <a href="https://portal.office.com/profile" class="btn btn-info btn-sm" target="_blank">Edytuj profil publiczny</a>
                                    </div>

                                    <div id="events" class="tab-pane" style="min-height: 300px;">
                                        <table class="table">
                                            <tr>
                                                <th>
                                                    Nazwa zdarzenia
                                                </th>
                                                <th>
                                                    Szerokość geogr.
                                                </th>
                                                <th>
                                                    Długość geogr.
                                                </th>
                                                <th>
                                                    Data
                                                </th>
                                                <th>
                                                    Opis
                                                </th>
                                                <th>
                                                    Status
                                                </th>
                                                <th></th>
                                            </tr>
                                            @foreach (var item in Model.User.Events)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Latitude)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Longitude)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CreatedAt)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Description)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Status)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Szczegóły", "Details", "Events", new { id = item.Id }, new { id = item.Id, Class = "btn btn-warning btn-sm" })
                                                    </td>
                                                </tr>
                                            }
                                        </table>
                                    </div>

                                    <div id="elems" class="tab-pane" style="min-height: 300px;">
                                        <table class="table">
                                            <tr>
                                                <th>
                                                    Nazwa zdarzenia
                                                </th>
                                                <th>
                                                    Szerokość geogr.
                                                </th>
                                                <th>
                                                    Długość geogr.
                                                </th>
                                                <th>
                                                    Opis
                                                </th>
                                                <th></th>
                                            </tr>
                                            @foreach (var item in Model.User.LayoutElements)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Latitude)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Longitude)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Description)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Szczegóły", "Details","LayoutElements", new { id = item.Id }, new { id = item.Id, Class = "btn btn-warning btn-sm" })
                                                    </td>
                                                </tr>
                                            }
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </section>
                        

                    </div>
                </section>

            </div>
        </div>
    </section>
</section>
