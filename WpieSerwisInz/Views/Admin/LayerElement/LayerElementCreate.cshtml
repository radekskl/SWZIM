@model WpieSerwisInz.Models.BO.LayerElement


@{
    ViewBag.Title = "LayerElementCreate";
}

<h2>Layer Element Create</h2>

@using (Html.BeginForm("LayerElementCreate", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.ElementName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ElementName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Information, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Information, new { @class = "form-control" })
        </div>
    </div>

    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
            @Html.RouteLink("Back to List", "AdminLayerElement", new { action = "LayerElements" }, new { @class = "btn btn-default" })
        </div>
    </div>
}