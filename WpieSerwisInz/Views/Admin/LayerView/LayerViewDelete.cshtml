

@using Microsoft.Ajax.Utilities
@using WpieSerwisInz.Models.BO
@using WpieSerwisInz.Models.BO.Core.CheckboxListBo
@model WpieSerwisInz.Models.BO.LayerView

@{
    ViewBag.Title = "LayerViewDelete";
}

<h2>Layer View Delete</h2>

<h3>Are you sure you want to delete this View?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LayerName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LayerName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LayerInformation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LayerInformation)
        </dd>
        <br />
        Layer Elements
        <br />
        @foreach (LayerElement ma in Model.LayerElements)
        {
            <text>@ma.ElementName</text>
            <br />
        }

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="LayerViewDelete" class="btn btn-default" />
            @Html.RouteLink("Back to List", "AdminLayerView", new { action = "LayerViews" }, new { @class = "btn btn-default" })
        </div>
    }
</div>
