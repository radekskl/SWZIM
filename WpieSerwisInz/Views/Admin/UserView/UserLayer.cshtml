@model WpieSerwisInz.Models.BO.Wrapper.LayerTypeWrapper

@{
    ViewBag.Title = "UserView";
}

<h2>User Layer</h2>

@using (Html.BeginForm("UserLayer", "Admin", FormMethod.Post, new { encType = "multipart/form-data", name = "myform" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.UserId)
                @foreach (var a in Model.RadioButtons.Answers)
                {
                    if (a.Id.ToString() == Model.RadioButtons.SelectedValue)
                    {
                        <p>
                            @Html.RadioButtonFor(b => b.RadioButtons.SelectedValue, a.Id, true)  @a.Name
                        </p>
                    }
                    else
                    {
                        <p>
                            @Html.RadioButtonFor(b => b.RadioButtons.SelectedValue, a.Id)  @a.Name
                        </p>
                    }
                }
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}