@model WpieSerwisInz.Models.SelectUserRolesViewModel


@{
    ViewBag.Title = "UserRoles";
}

<h2>Roles for user @Html.DisplayFor(model => model.UserName)</h2>
<hr />

@using (Html.BeginForm("UserRoles", "Admin", FormMethod.Post, new { encType = "multipart/form-data", name = "myform" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Id, Model.Id)
            </div>
        </div>
        <h4>Select Role Assignments</h4>
        <table>
            <tr>
                <th>
                </th>
                <th>
                </th>
            </tr>
            @Html.EditorFor(model => model.Roles)

        </table>
        <br />
        <hr />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                @Html.RouteLink("Back to List", "AdminUsers", new { action = "Users" }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}