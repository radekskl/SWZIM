@model WpieSerwisInz.Models.BO.JunctionModel

@{
    ViewBag.Title = "Edit";
}

<script type="text/javascript">
    $(document).ready(function () {
        loadSingleMap('@Model.Lat', '@Model.Long', '@Model.Name', '@Model.Information', true);
    });
</script>
<h2>Edit Junction</h2>

<div>
    <div class="col-md-5">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.LastModificationDate)
                @Html.HiddenFor(model => model.CreationDate)
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Information, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextAreaFor(model => model.Information)
                        @Html.ValidationMessageFor(model => model.Information)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IsAccepted, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.IsAccepted)
                        @Html.ValidationMessageFor(model => model.IsAccepted)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Lat, new { id = "CrossLat", @readonly = true, @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Lat, new { id = "Lat", @readonly = true })
                        @Html.ValidationMessageFor(model => model.Lat)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Long, new { id = "CrossLong", @readonly = true, @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Long, new { id = "Long", @readonly = true })
                        @Html.ValidationMessageFor(model => model.Long)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-7">
        <div id="map-canvas" style="width: 100%; height: 480px;"></div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
